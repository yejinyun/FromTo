<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/item_mailbox_more_background"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/background_mailbox"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_fromto_round"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/item_mailbox_more_background"
        app:layout_constraintEnd_toEndOf="@id/item_mailbox_more_background"/>
    <TextView
        android:id="@+id/item_mailbox_more_reciever_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To. 수신자"
        android:padding="3dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/item_mailbox_more_background"
        app:layout_constraintTop_toTopOf="@id/item_mailbox_more_background"/>

    <TextView
        android:id="@+id/item_mailbox_more_sender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:text="From. 발신자"
        android:padding="3dp"
        android:textSize="14sp"
        android:textColor="@color/white_80"
        app:layout_constraintEnd_toEndOf="@id/item_mailbox_more_background"
        app:layout_constraintBottom_toBottomOf="@id/item_mailbox_more_background"/>

    <TextView
        android:id="@+id/item_mailbox_more_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.02.02"
        android:padding="3dp"
        android:textSize="11sp"
        android:textColor="@color/white_80"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/item_mailbox_more_reciever_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_mailbox_more_background"/>



</androidx.constraintlayout.widget.ConstraintLayout>