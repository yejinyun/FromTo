<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/point_red">

    <ImageView
        android:id="@+id/signup_logo_iv"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_logo_fromto"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_terms_layout" />

    <TextView
        android:id="@+id/signup_welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프롬투에 오신 것을 환영합니다"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_logo_iv" />

    <LinearLayout
        android:id="@+id/signup_terms_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/round"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <CheckBox
        android:id="@+id/signup_terms_cb_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@id/signup_check_up_btn"
        app:layout_constraintTop_toTopOf="@+id/signup_terms_layout"
        />

    <TextView
        android:id="@+id/signup_terms_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 이용 약관에 동의합니다"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/signup_terms_cb_1"
        app:layout_constraintTop_toTopOf="@+id/signup_terms_cb_1"
        app:layout_constraintBottom_toBottomOf="@+id/signup_terms_cb_1"
        />

    <TextView
        android:id="@+id/signup_terms_tv_1_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="@id/signup_check_up_btn"
        app:layout_constraintTop_toTopOf="@+id/signup_terms_cb_1"
        app:layout_constraintBottom_toBottomOf="@+id/signup_terms_cb_1"
        />

    <CheckBox
        android:id="@+id/signup_terms_cb_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/signup_check_up_btn"
        app:layout_constraintTop_toBottomOf="@id/signup_terms_cb_1"/>

    <TextView
        android:id="@+id/signup_terms_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 개인 정보 수집 및 이용에 동의합니다"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/signup_terms_cb_2"
        app:layout_constraintTop_toTopOf="@+id/signup_terms_cb_2"
        app:layout_constraintBottom_toBottomOf="@+id/signup_terms_cb_2"
        />

    <TextView
        android:id="@+id/signup_terms_tv_2_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="@id/signup_check_up_btn"
        app:layout_constraintTop_toTopOf="@+id/signup_terms_cb_2"
        app:layout_constraintBottom_toBottomOf="@+id/signup_terms_cb_2"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_check_up_btn"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text="확인"
        android:textSize="18sp"
        android:background="@drawable/white_btn"
        android:textColor="@color/point_red"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>